<!-- apps/src/views/list.ejs -->
<!doctype html>
<html lang="de">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Bewerbungen</title>
  <style>
    body { font-family: system-ui, -apple-system, Segoe UI, Roboto, sans-serif; margin: 24px; }
    table { border-collapse: collapse; width: 100%; }
    th, td { border: 1px solid #ddd; padding: 8px; vertical-align: top; }
    th { background: #f6f6f6; text-align: left; }
    a { color: inherit; }
    .muted { color: #666; }
  </style>
</head>
<body>
  <h1>Bewerbungen</h1>
  <p class="muted">Klick auf eine Firma für Details &amp; Dokumente.</p>

  <table>
    <tr>
      <th>Firma</th>
      <th>Position</th>
      <th>Beworben</th>
      <th>Status</th>
      <th>Quelle</th>
      <th>Letztes Dokument</th>
      <th>Letzter Typ/Titel</th>
    </tr>

    <% rows.forEach(r => { %>
      <tr>
        <td>
          <a href="/apps/<%= r.application_id %>"><%= r.company %></a>
        </td>
        <td><%= r.position_title ?? "" %></td>
        <td><%= r.applied_at ? new Date(r.applied_at).toLocaleDateString('de-DE')).slice(0,10) : "" %></td>
        <td><%= r.status ?? "" %></td>
        <td>
          <%= r.application_source ?? "" %>
          <% if (r.application_source_detail) { %>
            <span class="muted">(<%= r.application_source_detail %>)</span>
          <% } %>
        </td>
        <td><%= r.last_doc_date ? new Date(r.last_doc_date).toLocaleDateString('de-DE').slice(0,10) : "" %></td>
        <td>
            <%= r.last_doc_type ?? "" %>
            <%= r.last_doc_title ? " — " + r.last_doc_title : "" %>
        </td>
      </tr>
    <% }) %>
  </table>
</body>
</html>
